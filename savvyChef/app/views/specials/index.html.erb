<p id="notice"><%= notice %></p>

<h1>Specials:</h1>
<%= link_to 'New Special', new_special_path %>
<%= link_to 'Manage Categories', category_index_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Last Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <hr>

  <tbody>
    <% @specials.each do |special| %>
    <tr>
        <td><%=link_to special.title, special %></td> 
        <td><%= special.category.name rescue "No category" %></td>  		  
        <td><%= time_ago_in_words(special.updated_at) %> ago</td>       
     		<td><%= button_to 'Edit', edit_special_path(special) %></td>
        <td><%= button_to 'Delete', special, method: :delete, data: { confirm:
        'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
  
</table>
<hr>
<br>


