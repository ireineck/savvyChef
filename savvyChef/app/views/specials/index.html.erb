<p id="notice"><%= notice %></p>

<h1>Specials:</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Last Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <hr>

  <tbody>
    <% @specials.each do |special| %>
    <tr>
        <td><%= special.title %></td>   		  
        <td><%= time_ago_in_words(special.updated_at) %> ago</td>       
     		<td><%= button_to 'Edit', edit_special_path(special) %></td>
        <td><%= button_to 'Delete', special, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>
<hr>
<br>

<%= link_to 'New Special', new_special_path %>
